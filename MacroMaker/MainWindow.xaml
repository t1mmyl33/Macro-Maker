<Window x:Class="MacroMaker.MainWindow"
		Name="Main_Window"
		xmlns:macro="clr-namespace:MacroMaker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Macro Maker" Height="800" Width="500"
		DataContext="{Binding RelativeSource={RelativeSource Self}}">

	<Grid DataContext="{Binding Path=MainViewModel}">
		<Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Menu Grid.Row="0" Height="20">
            <MenuItem>
                <MenuItem.Header>
                    <TextBlock Width="40" Text="File" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </MenuItem.Header>
				<MenuItem Header="New"/>
				<MenuItem Header="Save"/>
                <Separator/>
				<MenuItem Header="Exit" Command="{Binding Exit}" CommandParameter="{Binding ElementName=Main_Window}"/>
			</MenuItem>
        </Menu>
        <Grid Grid.Row="1">
			<macro:StoryControl StoryViewModel="{Binding StoryViewModel}" />
		</Grid>
        <Grid Grid.Row="2">

        </Grid>
        <Grid Grid.Row="3">
            
        </Grid>
    </Grid>
</Window>
